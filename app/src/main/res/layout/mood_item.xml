<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    android:background="@color/grey200"
    android:layout_margin="5dp"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/ivMoodIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvMoodNoteDate"
        app:layout_constraintBottom_toBottomOf="@id/tvMoodNoteDate"
        />
    <TextView
        android:id="@+id/tvMoodNoteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivMoodIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvMoodNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMoodNoteDate"
        android:textStyle="italic"
        />

</androidx.constraintlayout.widget.ConstraintLayout>